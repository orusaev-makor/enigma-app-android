<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enigmaapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Enigma-X"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EnigmaApp">
        <activity android:name=".activity.FormActivity"></activity>
        <activity android:name=".activity.UserActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="uiMode"
            android:theme="@style/Theme.EnigmaApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.DatasetService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>