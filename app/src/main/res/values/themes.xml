<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EnigmaApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0D2757</item>
        <item name="colorPrimaryVariant">#0D2757</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColor</item>
        <item name="colorSecondaryVariant">@color/textColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:dialogTheme">@style/MyDialogTheme</item>
        <item name="android:datePickerDialogTheme" tools:targetApi="lollipop">@style/MyDialogTheme</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>

    <style name="Theme.EnigmaApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/textColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="backArrowTheme" parent="Theme.EnigmaApp">
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>

<!--        burger menu icon color-->
        <item name="color">@color/textColor</item>
    </style>

    <style name="Theme.EnigmaApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopOverlay" parent="Theme.AppCompat.Light" />

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:text">@color/textColor</item>
        <!-- If you want you can override only colorAccent -->
<!--        <item name="android:colorAccent">@color/colorPrimaryDark</item>-->
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:layout_height">20sp</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="background">@color/colorPrimaryDark</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/textColor</item>
        <item name="chipBackgroundColor">@color/colorPrimaryDark</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:checkable">false</item>
    </style>


    <style name="newsItemKeyword" parent="Theme.EnigmaApp">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_height">25dp</item>
        <item name="background">@drawable/underline_text</item>

    </style>

</resources>