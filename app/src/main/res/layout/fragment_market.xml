<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MarketFragment"
        android:paddingLeft="30dp"
        android:paddingTop="10sp"
        android:paddingRight="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/market"
            android:textColor="@color/textColor"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editTextMarketSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="Search"
            android:drawableLeft="@drawable/ic_search"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

<!--        <com.github.mikephil.charting.charts.LineChart-->
<!--            android:id="@+id/marketItemLineChart"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="65dp" />-->

<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/market_fragment_recycler_view"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginTop="30dp"-->
<!--                tools:listitem="@layout/market_item" />-->

        <include
            android:layout_marginTop="30dp"
            layout="@layout/market_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="-10dp"
            android:paddingRight="-10dp" />

    </LinearLayout>
</ScrollView>
