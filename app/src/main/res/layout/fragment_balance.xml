<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BalanceFragment"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/textColor"
        android:text="Hello, Client"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textColor="@color/textColor"
        android:text="My Balance"
        android:textSize="18sp" />

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:strokeColor="@color/balanceCardBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        app:strokeWidth="1dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="10dp"
            android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_btc"
            app:tint="@color/statusCancelled" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Bitcoin"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins_light"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="327'524 . "
            android:layout_marginLeft="18dp"
            android:textSize="28dp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00656017"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:fontFamily="@font/poppins_light"
            />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeColor="@color/balanceCardBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        app:strokeWidth="1dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="10dp"
            android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_usd"
            app:tint="@color/textColor" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="USD"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins_light"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="3'276'045 ."
                android:textColor="@color/green"
                android:textSize="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppins_light"
                android:text=" 43"
                android:textColor="@color/green"
                android:textSize="20dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:strokeColor="@color/balanceCardBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        app:strokeWidth="1dp"
        app:cardCornerRadius="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingLeft="10dp"
            android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:src="@drawable/ic_eur"
            app:tint="@color/textColor" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="EUR"
            android:textSize="14dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/poppins_light"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-7'832'859 ."
            android:layout_marginLeft="18dp"
            android:textSize="28dp"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 00"
            android:textSize="20dp"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_light"
            />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:strokeColor="@color/balanceCardBorder"
        android:backgroundTint="@color/colorPrimaryDark"
        app:strokeWidth="1dp"
        app:cardCornerRadius="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="18dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/textColor"
            android:text="My Cryptocurrency"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>