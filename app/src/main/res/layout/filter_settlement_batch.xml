<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10sp"
        android:paddingRight="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/settlement_filter"
                android:textColor="@color/textColor"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:contentDescription="@string/close"
                android:src="@drawable/ic_action_close"
                app:tint="@color/textColor" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/batch"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            android:textColor="@color/textHintColor"
            />

        <EditText
            android:id="@+id/editTextDate5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/product"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/counterparty"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <include
            layout="@layout/section_status_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/news_fragment_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Chips can be declared here, or added dynamically. -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTC"
                    app:closeIcon="@drawable/ic_action_close"
                    app:chipIconTint="@color/textColor"
                    app:chipCornerRadius="3dp"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip9"
                    android:padding="0dp"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TradeBlock"
                    app:closeIcon="@drawable/ic_action_close"
                    app:chipIconTint="@color/textColor"
                    app:chipCornerRadius="3dp"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp" />

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="220sp"
            android:layout_marginBottom="40dp"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:text="@string/reset"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="6dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/textColor"
                app:strokeWidth="1dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="37sp"
                android:layout_margin="0.5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.5"

                android:background="@drawable/back_btn_border"
                android:text="@string/filter"
                android:layout_marginStart="4dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>