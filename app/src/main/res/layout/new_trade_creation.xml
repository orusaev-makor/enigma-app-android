<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10sp"
        android:paddingRight="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/trade_create"
                android:textColor="@color/textColor"
                android:textSize="25sp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:contentDescription="@string/close"
                android:src="@drawable/ic_action_close"
                app:tint="@color/textColor" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/trade_type"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioButtonClient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:buttonTint="@color/textColor"
                android:checked="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/client"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonHedge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:buttonTint="@color/textSecondaryColor"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/hedge"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonBothLegs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.31"
                android:buttonTint="@color/textSecondaryColor"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/both_legs"
                android:textColor="@color/textSecondaryColor"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/client_side"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioButtonBuy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:buttonTint="@color/green"
                android:checked="true"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/buy"
                android:textColor="@color/green"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radioButtonSell"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:buttonTint="@color/red"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/sell"
                android:textColor="@color/red"
                android:textSize="16sp" />

        </RadioGroup>

        <EditText
            android:id="@+id/editTextDate3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_date_picker"
            android:drawableTint="@color/textColor"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="02 Oct 2020 - 07 Oct 2020"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_date_picker" />

        <!--        <LinearLayout-->
        <!--            android:id="@+id/horizontal_layout"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:visibility="gone">-->

        <!--            <Button-->
        <!--                android:id="@+id/button1"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Execution Type Option 1" />-->

        <!--            <Button-->
        <!--                android:id="@+id/button2"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Execution Type Option 2" />-->
        <!--            -->
        <!--        </LinearLayout>-->


        <EditText
            android:id="@+id/editTextDate4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/execution_type"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/product"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/company"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/client"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/broker"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down" />

        <EditText
            android:id="@+id/editTextDate10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/quantity"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextDate11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/client"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextDate12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/provider_price"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:paddingStart="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="@font/poppins_regular"
                android:gravity="end"
                android:text="@string/sales_p_amp_l"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/poppins_regular"
                android:gravity="start"
                android:text="0"
                android:textColor="@color/green"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/editTextDate13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/comment"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp"
            android:paddingStart="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/back_btn_border"
            android:text="@string/review_amp_submit" />

    </LinearLayout>

</ScrollView>