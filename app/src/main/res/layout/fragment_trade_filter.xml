<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10sp"
        android:paddingRight="30dp"
        tools:context=".TradeFilterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/trade_filter"
                android:textColor="@color/textColor"
                android:textSize="25sp" />


            <!--            <ImageView-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_weight="0.1"-->
            <!--                android:contentDescription="@string/close"-->
            <!--                android:src="@drawable/ic_action_close"-->
            <!--                app:tint="@color/textColor" />-->
            <!--            -->

            <Button
                android:id="@+id/filter_trade_close_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:background="@drawable/ic_action_close"
                android:textColor="@color/textColor" />

        </LinearLayout>


        <EditText
            android:id="@+id/filter_trade_date_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/ic_date_picker"
            android:drawableRight="@drawable/ic_date_picker"
            android:drawableTint="@color/textColor"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="02 Oct 2020 - 07 Oct 2020"
            android:inputType="date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/filter_trade_trade_id_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/trade_id"
            android:paddingLeft="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/filter_trade_product_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/product"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/filter_trade_execution_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/execution_type"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp" />

        <include
            layout="@layout/filter_trade_limited_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/filter_trade_batched_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_border"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:drawableTint="@color/textColor"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/batched"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/textSecondaryColor"
            android:textSize="16sp" />

        <include
            layout="@layout/section_status_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/trade_filter_chip_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Chips can be declared here, or added dynamically. -->
                <!--        TODO: make rectangle border shape -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:text="OTC"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipCornerRadius="3dp"
                    app:chipIconTint="@color/textColor"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp"
                    app:closeIcon="@drawable/ic_action_close" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TradeBlock"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipCornerRadius="3dp"
                    app:chipIconTint="@color/textColor"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp"
                    app:closeIcon="@drawable/ic_action_close" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip8"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:text="Rest API"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipCornerRadius="3dp"
                    app:chipIconTint="@color/textColor"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp"
                    app:closeIcon="@drawable/ic_action_close" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip9"
                    style="@style/Widget.MaterialComponents.Chip.Entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="TradeBlock"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/colorPrimaryDark"
                    app:chipCornerRadius="3dp"
                    app:chipIconTint="@color/textColor"
                    app:chipStrokeColor="@color/navy"
                    app:chipStrokeWidth="0.5dp"
                    app:closeIcon="@drawable/ic_action_close" />


            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="40dp"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filter_trade_reset_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:text="@string/reset"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="6dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/textColor"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/filter_trade_submit_btn"
                android:layout_width="0dp"
                android:layout_height="37sp"
                android:layout_margin="0.5dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.5"
                android:background="@drawable/back_btn_border"
                android:text="@string/filter" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
