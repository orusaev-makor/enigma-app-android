<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/cardBorderNoDarkTheme"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:scrollHorizontally="false">

        <!--        <WebView-->
        <!--            android:id="@+id/myweb"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/news_fragment_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Now"
            android:textColor="@color/red"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/news_fragment_card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="In this week's issue, we look at volume and open interest trends on retail spot and futures market, examine the recent regulatory actions against derivatives venues, and assess the implications for BTC in the medium-term."
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/news_top_border"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/news_keywords_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

<!--        <androidx.recyclerview.widget.RecyclerView-->
