<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/trade_id"
            android:fontFamily="@font/poppins_light"
            android:drawablePadding="5dp"
            android:backgroundTint="@color/textColor"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:drawableTint="@color/textColor"
            app:drawableStartCompat="@drawable/ic_action_trade" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawablePadding="5dp"
            android:backgroundTint="@color/textColor"
            android:text="@string/settl_batch_id"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:drawableTint="@color/textColor"
            app:drawableLeftCompat="@drawable/ic_action_settlement" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="422120"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="368"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/exec_type"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"

            android:text="@string/status"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="OTC"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Cancelled"
            android:textColor="@color/statusCancelled"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nominal"
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-1'000'000.00"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:gravity="center"
        />

<!--    <include-->
<!--        layout="@layout/bottom_actions_section"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/trade_action_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="45sp"
            android:src="@drawable/ic_action_edit"
            app:tint="@color/textColor"
            android:contentDescription="@string/edit"
            android:layout_marginEnd="45sp" />

        <ImageView
            android:id="@+id/trade_action_mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="45sp"
            android:src="@drawable/ic_action_mail"
            app:tint="@color/textColor"
            android:contentDescription="@string/mail"
            android:layout_marginEnd="45sp" />

        <ImageView
            android:id="@+id/trade_action_bin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_bin"
            app:tint="@color/textColor"
            android:contentDescription="@string/bin"/>

    </LinearLayout>

</LinearLayout>