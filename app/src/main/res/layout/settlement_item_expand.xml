<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawablePadding="5dp"
            android:backgroundTint="@color/textColorDark"
            android:text="@string/settl_batch_id"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_action_settlement"
            app:drawableTint="@color/textColorDark" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/settl_id"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="380"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="9085"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/side"
            android:gravity=""
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_settlement_side"
            app:drawableTint="@color/textColor"
            app:drawableStartCompat="@drawable/ic_settlement_side" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"
            android:text="@string/type"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_settlement_type"
            app:drawableTint="@color/textColor"
            app:drawableStartCompat="@drawable/ic_settlement_type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="To send"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Crypto"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:text="@string/amount"
            android:textColor="@color/textColorDark"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/open_amount"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:textColor="@color/textColorDark"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="1.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="BTC Wallet"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/settled_amount"
            android:textColor="@color/textColorDark"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/open_amount"
            android:textColor="@color/textColorDark"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="1.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/counterparty_account"
        android:textColor="@color/textColorDark"
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTC Wallet 2 LLC/ Brevy"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:gravity="center"
        />

        <include
            layout="@layout/section_bottom_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            />


</LinearLayout>