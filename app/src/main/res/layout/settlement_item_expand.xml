<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawablePadding="5dp"
            android:backgroundTint="@color/textColorDark"
            android:text="@string/settl_batch_id"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            android:drawableTint="@color/textColorDark"
            app:drawableLeftCompat="@drawable/ic_action_settlement" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/settl_id"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="380"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="9085"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/poppins_light"
            android:text="@string/side"
            android:gravity=""
            android:drawableLeft="@drawable/ic_settlement_side"
            android:drawableTint="@color/textColor"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_settlement_side" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="25sp"
            android:drawableLeft="@drawable/ic_settlement_type"
            android:drawableTint="@color/textColor"
            android:text="@string/type"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_settlement_type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="To send"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Crypto"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:text="@string/amount"
            android:textColor="@color/textColorDark"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/open_amount"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"
            android:textColor="@color/textColorDark"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="1.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="BTC Wallet"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/settled_amount"
            android:textColor="@color/textColorDark"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/open_amount"
            android:textColor="@color/textColorDark"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="1.00000000"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/counterparty_account"
        android:textColor="@color/textColorDark"
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTC Wallet 2 LLC/ Brevy"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:gravity="center"
        />

    <!--    <include-->
    <!--        layout="@layout/bottom_actions_section"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="15sp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/trade_action_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="45sp"
            android:src="@drawable/ic_action_edit"
            app:tint="@color/textColor"
            android:contentDescription="@string/edit"
            android:layout_marginEnd="45sp" />

        <ImageView
            android:id="@+id/trade_action_mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="45sp"
            android:src="@drawable/ic_action_mail"
            app:tint="@color/textColor"
            android:contentDescription="@string/mail"
            android:layout_marginEnd="45sp" />

        <ImageView
            android:id="@+id/trade_action_bin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_bin"
            app:tint="@color/textColor"
            android:contentDescription="@string/bin"/>

    </LinearLayout>

</LinearLayout>