<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingTop="10sp"
        tools:context=".activity.fragment.TradeSelectFilterFragment">

        <TextView
            android:id="@+id/multi_select_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Batched"
            android:textColor="@color/textColor"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/multi_select_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:paddingLeft="30dp"
            android:paddingTop="10sp"
            android:paddingRight="30dp"
            android:text="Select batch to filter"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:weightSum="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multi_select_reset_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/ubuntu_regular"
                android:text="@string/reset"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="0dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/textColor"
                app:strokeWidth="1dp" />

            <!--            <Button-->
            <!--                android:id="@+id/multi_select_submit_btn"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="37sp"-->
            <!--                android:layout_margin="0.5dp"-->
            <!--                android:layout_marginStart="4dp"-->
            <!--                android:layout_marginLeft="4dp"-->
            <!--                android:layout_weight="0.5"-->
            <!--                android:background="@drawable/back_btn_border"-->
            <!--                android:text="@string/add" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multi_select_submit_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/ubuntu_medium"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:backgroundTint="@color/actionBtnColor"
                app:cornerRadius="0dp"
                app:rippleColor="#33AAAAAA"
                app:strokeWidth="0dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multi_select_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/filter_item" />

    </LinearLayout>
</ScrollView>
