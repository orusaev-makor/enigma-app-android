<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="28dp"
    android:paddingRight="28dp"
    tools:context=".activity.fragment.ForgotPasswordFragment">

    <TextView
        android:id="@+id/forgot_password_back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/textColor"
        android:fontFamily="@font/ubuntu_light"
        android:text="@string/back"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <View
        android:id="@+id/forgot_password_logo"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/ic_enigma_logo"
        android:backgroundTint="@color/textColor" />

    <TextView
        android:id="@+id/forgot_password_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ubuntu_regular"
        android:text="@string/welcome"
        android:textColor="@color/textColor"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/forgot_password_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/forgot_password_main_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/ubuntu_light"
        android:maxWidth="152dp"
        android:text="@string/reset_password"
        android:textColor="@color/textColorDark"
        android:textSize="14sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_password_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_sub_title"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark"
        android:textColorHint="@color/textHintColor"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/textHintColor"
        app:passwordToggleTint="@color/textColor">


        <EditText
            android:id="@+id/forgot_password_username_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_border"
            android:hint="@string/username_hint"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/forgot_password_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot_password_username"

        android:layout_marginTop="6dp"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <Button
        android:id="@+id/forgot_password_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="45dp"
        android:fontFamily="@font/ubuntu_medium"
        android:stateListAnimator="@null"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:backgroundTint="@color/actionBtnColor"
        app:cornerRadius="0dp" />

</RelativeLayout>