<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient android:startColor="@color/colorPrimary" android:centerColor="@color/colorPrimary"
                android:centerY="0.75" android:endColor="@color/colorPrimary" android:angle="90" />
            <stroke android:width="1dp" android:color="@color/textColor" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient android:startColor="@color/textColor" android:endColor="@color/textColor"
                    android:angle="90" />
                <stroke android:width="1dp" android:color="@color/textColor" />
            </shape>
        </clip>
    </item>
</layer-list>